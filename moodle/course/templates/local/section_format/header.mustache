{{!
    @template core_course/local/section_format/header

    Displays a course section header.

    Example context (json):
    {
        "name": "Section title",
        "url": "#",
        "ishidden": true
    }
}}

<h3 class="sectionid-{{id}}-title sectionname">
    {{#url}}
    <a href="{{{url}}}" class="{{#ishidden}} dimmed_text {{/ishidden}}">{{name}}</a>
    {{/url}}
    {{^url}}
    <span>{{{title}}}</span>
    {{/url}}
</h3>
